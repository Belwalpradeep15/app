<script type="text/javascript">
    <%  alertConfigHash = {}
        AlertConfiguration.all.each do |alert_configs|
            alertConfigHash[alert_configs.alert_type] ||= {}
            alertConfigHash[alert_configs.alert_type][alert_configs.key] = alert_configs.value
        end %>
    alertTypes = <%= raw alertConfigHash.to_json %>;
</script>

