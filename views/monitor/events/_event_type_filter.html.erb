<table class="nospace">
    <tr>
        <td>
            <%= check_box_tag "restrictEventTypes", "1", false, :onchange=>"eventTypeFilterEnable(this.form)" %>
            <%= label_tag "restrictEventTypes", I18n.t('monitor.events.filters.restrict_events') %>
        </td>
    </tr>
    <tr id='filterFormEventTypesRow'>
        <td>
            <select id='eventTypesList' name="eventTypes" multiple="multiple">
            </select>
        </td>
    </tr>
</table>

<script type="text/javascript">
    function eventTypeFilterEnable(form) {
        form.eventTypes.disabled = !form.restrictEventTypes.checked;
    }
    
    function eventTypeFilterValidate(dlg) {
    }
</script>




