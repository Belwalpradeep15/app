<%= form_for :reference_point do |f| %>
    <table class="padded">
        <tr>
            <th><%= f.label :label, I18n.t('admin.reference_points.label') %></th>
            <td><%= f.text_field :label, :class => 'required' %></td>
        </tr>
        <tr>
            <th><%= f.label :latitude, I18n.t('admin.alerts.headers.latitude') %></th>
            <td><%= f.text_field :latitude, :class => 'required float_field'%></td>
        </tr>
        <tr>
            <th><%= f.label :longitude, I18n.t('admin.alerts.headers.longitude') %></th>
            <td><%= f.text_field :longitude, :class => 'required float_field' %></td>
        </tr>
    </table>
<% end %>



