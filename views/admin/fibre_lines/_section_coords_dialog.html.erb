    <div id="sectionCoordDialog" style="visibility: hidden; max-width: 500px">
      <div class="hd">
        <%= I18n.t('admin.fibre_lines.section_coords_dialog.title') %>
      </div>
      <div class="bd">
        <%= form_for :fibre_line, :url => { :action => :section_calibrate}, :html => {:id => "sectionCoordsForm", :name => "sectionCoordsForm"} do |f| %>
            <input type="hidden" name="distance_units" value="<%= @distance_units %>"/>
            <table id="sectionCoordsFormTable">
              <tr>
                <td colspan='2'>

                  <div id="coordsPanel" style="overflow: auto; max-height: 200px;">
                      <table >
