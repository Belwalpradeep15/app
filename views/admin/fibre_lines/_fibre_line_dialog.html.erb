<div id="fibre_line_dialog" style="visibility: hidden;" class="noprint">
    <div class="hd">
        <%= I18n.t('admin.fibre_lines.fibre_line_dialog.title') %>
    </div>
    <div class="bd">
        <%= form_with :id => 'fibre_line_form' do -%>
            <table class="padded">
                <tr>
                    <th><%= I18n.t('admin.fibre_lines.fibre_line_dialog.name') %></th>
                    <td><%= text_field_tag 'name', nil, :size => 55 %></td>
                </tr>
                <tr>
                    <th><%= I18n.t('common.headers.organization') %>:</th>
                    <td>
                        <select id="organization" name="organization">
                            <% selected = "selected='selected'" %>
                            <% @organizations.each do |org| %>
                                <option value='<%= org.id %>' <%= selected %>><%= org.name %></option>
                                <% selected = "" %>
                            <% end %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th><%= I18n.t('admin.fibre_lines.display_type_head') %>:</th>
                    <td>
                        <select id="display" name="display">
                            <% selected = "selected='selected'" %>
                            <% @display_types.each do |disp| %>
                                <option value='<%= disp.id %>' <%= selected %>><%= disp.description %></option>
                                <% selected = "" %>
                            <% end %>
                        </select>
                    </td>
                </tr>
            </table>
        <% end -%>
    </div>
</div>
