<div id="splice_dialog" style="visibility: hidden;" class="noprint">
    <div class="hd">
        <%= I18n.t('admin.fibre_lines.splice_dialog.title') %>
    </div>
    <div class="bd">
        <%= form_with :id => 'splice_form' do -%>
            <table class="padded">
                <tr>
                    <th><%= I18n.t('common.headers.position') %></th>
                    <td><%= text_field_tag 'raw_position', nil %> (<%= @distance_units %>)</td>
                </tr>
                <tr>
                    <th><%= I18n.t('admin.common.length') %></th>
                    <td><%= text_field_tag 'raw_length', nil %> (<%= @distance_units %>)</td>
                </tr>
            </table>
            <%= hidden_field_tag 'position', nil %>
            <%= hidden_field_tag 'length', nil %>
        <% end -%>
    </div>
</div>
