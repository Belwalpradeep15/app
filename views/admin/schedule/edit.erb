                    </tr>
                    <tr>
                        <th></th>
                        <td><%= (I18n.t('common.time.timezone', :timezone => ("GMT " + Time.zone.formatted_offset)))  %></td>
                    </tr>
                </table>
            <% end %>
        </div>
        </td>
        <td style="height:100%">
        <div id="map" style="width:100%;height:100%;float:left;"></div>
        </td>
