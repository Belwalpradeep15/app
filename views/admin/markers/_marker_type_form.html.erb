<%= form_for :marker_type, :html => { :multipart => true } do |f| %>
    <table class="padded">
        <tr>
            <th><%= f.label :name, I18n.t('common.headers.name') %></th>
            <td><%= f.text_field :name, :class => 'required' %></td>
            <td><%= hidden_field_tag "authenticity_token", form_authenticity_token %></td>
        </tr>
      <tr>
        <th colspan="3" style="padding-top:5px;"><%= f.label :icon, I18n.t('alert.detail_keys.icon') %></th>
      </tr>
      <tr>
        <td colspan="3">
          <%= file_field_tag 'upload_file_type', :file_type_error => I18n.t('admin.fibre_lines.man_cal.file_type_error'), :required => true, :accept => "image/png,image/jpeg,image/jpg,.jpg,.jpeg,.png" %>
        </td>
      </tr>
    </table>
<% end %>
